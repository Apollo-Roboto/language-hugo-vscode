{
    "name": "language-hugo",
    "displayName": "language-hugo",
    "description": "Adds syntax highlighting to Hugo files in VS Code",
    "version": "0.0.1",
    "publisher": "thenewdynamic",
    "engines": {
        "vscode": "^1.24.0"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/theNewDynamic/language-hugo/issues",
        "email": "info@thenewdynamic.org"
    },
    "homepage": "https://github.com/theNewDynamic/language-hugo",
    "repository": {
        "type": "git",
        "url": "https://github.com/theNewDynamic/language-hugo.git"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "hugo",        
        "html",
        "template"
    ],
    "contributes": {
        "languages": [{
            "id": "hugo",
            "aliases": ["HTML (Hugo)", "Hugo"],
            "extensions": [".html",".md"],
            "configuration": "./hugo.configuration.json"
        }],
        "grammars": [{
            "language": "hugo",
            "scopeName": "text.html.hugo",
            "path": "./src/syntaxes/hugo.tmLanguage.json"
        }]
    }
}